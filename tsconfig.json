{
  "compilerOptions": {
    // Compile for modern browsers while maintaining compatibility for Node.js
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    // Allow JavaScript files to coexist with TypeScript
    "allowJs": true,
    // Don't emit files — Next.js will handle compilation
    "noEmit": true,
    // Enable strict type‑checking options for better safety
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    // Resolve modules using Node semantics
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // Use the React JSX runtime
    "jsx": "preserve",
    // Include type definitions for Node and React
    "types": ["node", "react"],
    // Incremental builds improve performance for larger projects
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}